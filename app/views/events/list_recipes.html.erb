<div class="white-background">
  <div class="container">

    <div class="d-flex justify-content-between mb-3 pt-5">

      <div class="subtitles align-self-center">
        <p class="">02.03.2021 - 05.03.2021</p>
      </div>

      <div class="align-self-center">
        <h2 class="text-center"><%= @event.title %></h2>
        <p class="subtitles text-center"> <%= @event.number_of_members %> members</p>
      </div>

      <div>
        <%= link_to " ↩︎ Back", event_path, id: :btn_back, class: "ml-auto p-0" %>
        
        <div class="d-flex">
          <div class="mb-4 align-self-center">
            <%= link_to ingredient_list_path(@event), class:"no-text-decoration" do %>
              <div class="lilac-rectangular-card">
                <%= image_tag "List_of_ingredients.png" %>
                <p class="green text-center my-0 mx-2 flex-fill">List of ingredients</p>
              </div>
            <% end %>
          </div>     
      </div>
      

      </div>

     
    </div>


    <div>
      <% @event.meals.each do |meal| %>
        <div class="separator-bottom separator-left w-50 px-5 pb-3 pt-2">
          <div class="mt-5 d-flex">
            <div class="pl-4">
              <h5 class="separator-bottom pb-3"> <%= meal.recipe.name%></h5>
              <div class="pt-2">
                <p>
                <strong>  Recipe →</strong>
                </p>
                <p><%= meal.recipe.instructions %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
