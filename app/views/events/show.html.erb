                    <div class="col">
                      <div class="collapse multi-collapse" id="multiCollapseExample2">
                        <% meal.recipe.ingredients.each do |ingredient| %>
                        <%= ingredient.name %>  |
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>

                <div>
